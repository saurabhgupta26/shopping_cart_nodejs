<%- include('partials/header'); %> <%- include('partials/slider'); %>

<header>
  <div class="header_background flex">
    <div class="logo flex"></div>
  </div>
</header>

<main class="article_box">
  <h2>Shopping Cart</h2>
  <a href="/catalogue/list"
    ><button class="flex1"><i class="fas fa-chevron-circle-left"></i></button>
  </a>
  <% cart.forEach(a => { %> 
    <div class="flex flex2">
      <div class="profile_section flex">
      <img class="product" src="/images/uploads/<%= a.product.image %>" alt="image"/>
      <h3>
        <a href="/catalogue/list/<%= a.product.id %>"><%= a.product.name %> </a>
      </h3>
    </div>
    <h4> <i class="fas fa-rupee-sign"></i> <%= a.product.price %> X <%= a.quantity %>  =  <i class="fas fa-rupee-sign"></i> <%= a.product.price * a.quantity %>.00</h4>
  </div>
      <aside class="flex flex2">
        <form action="/cart/update/<%= a.product.id %>" method="POST">
          <label for="quantity">Update Quantity</label>
          <select id="quantity" name="quantity">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
          </select>
          <input
            type="submit"
            class="soft-ui rounded-square updateBtn"
          />
        </form>
        <a href="/cart/<%=cart.id %>/delete"><button>Delete</button> </a>
      </aside>
  <% }); %>
</main>

<%- include('partials/footer'); %>
