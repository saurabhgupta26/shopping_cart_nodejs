<%- include('partials/header'); %>
<%- include('partials/slider'); %>

<header>
  <div class="header_background flex">
    <div class="logo flex"></div>
  </div>
</header>
<main class="article_box">
  <div class="profile_section flex">      
    <% product.forEach(a => { %>
      <article class="product_info">
        <img class="product_image" src="/images/uploads/<%= a.image %>" alt="image">
        <h3><%= a.name %> </h3>
        <h4> <%= a.description %></h4>
        <h4><i class="fas fa-rupee-sign"></i> <%= a.price %></h4>
        <h4><%= a.category %></h4>       
      </article>
     <% }); %> 
  



    <a href="/catalogue/<%= admin.id %>/add_product/"> <button> Add product </button> </a>
    
</main>

<%- include('partials/footer'); %>
